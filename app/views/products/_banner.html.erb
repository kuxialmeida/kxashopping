
<div class="banner">
  <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="<%= asset_path('banner1.jpeg') %>" class="d-block w-100" alt="First slide">
        <div class="carousel-caption">
          <h1>Your Future Starts Here</h1>
          <p>Join the movement for a smarter tomorrow.</p>
          <%= link_to "Learn More", "#", class: "cta-button" %>
        </div>
      </div>
      <div class="carousel-item">
        <img src="<%= asset_path('banner2.jpg') %>" class="d-block w-100" alt="Second slide">
        <div class="carousel-caption">
          <h1>Innovate Today</h1>
          <p>Build a brighter future with us.</p>
          <%= link_to "Discover More", "#", class: "cta-button" %>
        </div>
      </div>
      <div class="carousel-item">
        <img src="<%= asset_path('banner3.jpg') %>" class="d-block w-100" alt="Third slide">
        <div class="carousel-caption">
          <h1>Dream Big</h1>
          <p>Let your ideas shape the world.</p>
          <%= link_to "Get Started", "#", class: "cta-button" %>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
